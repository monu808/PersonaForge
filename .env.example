# PersonaForge Environment Variables
# Copy this file to .env and fill in your actual values

# Supabase Configuration
VITE_SUPABASE_URL=your-supabase-url
VITE_SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_URL=your-supabase-url
SUPABASE_ANON_KEY=your-supabase-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key

# Support Email Configuration
SUPPORT_EMAIL_USER=your-email@gmail.com
SUPPORT_EMAIL_PASS=your-app-password
ADMIN_EMAIL=admin@personaforge.com

# Optional: Discord webhook for notifications
# DISCORD_SUPPORT_WEBHOOK=https://discord.com/api/webhooks/your-webhook-url

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-stripe-webhook-secret

# RevenueCat Configuration
VITE_REVENUECAT_API_KEY=your-revenuecat-api-key

# Server-side API Keys (used by Netlify Functions - DO NOT prefix with VITE_)
TAVUS_API_KEY=your-tavus-api-key
TAVUS_WEBHOOK_SECRET=your-tavus-webhook-secret
ELEVENLABS_WEBHOOK_SECRET=your-elevenlabs-webhook-secret
ELEVENLABS_API_KEY=your-elevenlabs-api-key
GOOGLE_GEMINI_API_KEY=your-google-gemini-api-key

# Server Configuration
PORT=3001
NODE_ENV=development

# JWT Configuration
JWT_SECRET=your-jwt-secret-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
